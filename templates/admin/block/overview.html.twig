{% extends 'admin/general/base.html.twig' %}

{% block title %}Content blocks{% endblock %}

{% block body %}
    <div class="heading">
        <h1>Content blocks</h1>
        <a class="add-button" href="{{ path('admin_block_create') }}">Add new</a>
    </div>

    <table class="overview">
        <thead>
        <tr>
            <th class="tick"><input id="overview-table-toggle-all" type="checkbox"></th>
            <th>Code</th>
            <th>Thumbnail</th>
            <th>Updated at</th>
        </tr>
        </thead>
        <tbody>
        {% for block in blocks %}
            <tr>
                <td class="tick"><input class="toggle" type="checkbox"></td>
                <td><a href="{{ path('admin_block_edit', {'id': block.id}) }}">{{ block.code }}</a></td>
                <td><a href="{{ path('admin_block_edit', {'id': block.id}) }}"><img class="thumbnail" src="{{ asset('media/' ~ block.image.name) }}"></a></td>
                <td>{{ block.updatedAt|date("j F Y - H:i:s") }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
