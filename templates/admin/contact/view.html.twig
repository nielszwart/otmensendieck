{% extends 'admin/general/base.html.twig' %}

{% block title %}View contact{% endblock %}

{% block body %}
    <div class="heading">
        <div class="actions">
            <a class="back-button" href="{{ path('admin_contact_overview') }}">Back to overview</a>
            <a class="delete-button" data-fancybox data-src="#modal">Delete this contact</a>
        </div>
        <h1>View contact</h1>
    </div>

    <div class="form">
        <div class="form-field">
            <label>Date sent</label>
            <p>{{ contact.dateSent|date("j F Y - H:i:s") }}</p>
        </div>

        <div class="form-field">
            <label>Name</label>
            <p>{{ contact.name }}</p>
        </div>

        <div class="form-field">
            <label>Email address</label>
            <p>{{ contact.email }}</p>
        </div>

        <div class="form-field">
            <label>Message</label>
            <p>{{ contact.message }}</p>
        </div>
    </div>

{% endblock %}

{% block modal %}
    <h2>Are you sure?</h2>
    <p>You can't undo deleting this contact</p>

    <form method="post" action="{{ path('admin_contact_delete', {'id': contact.id}) }}">
        <input type="hidden" name="id" value="{{ contact.id }}">
        <button type="submit" class="confirm-button">Confirm</button>
    </form>
    <a data-fancybox-close class="cancel-button">Cancel</a>
{% endblock %}
