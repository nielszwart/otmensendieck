{% extends 'admin/general/base.html.twig' %}

{% block title %}Edit page{% endblock %}

{% block body %}
	<div class="heading">
		<div class="actions">
			<a class="back-button" href="{{ path('admin_page_overview') }}">Back to overview</a>
			<a class="delete-button" data-fancybox data-src="#modal">Delete this page</a>
		</div>
		<h1>Edit page</h1>
	</div>

	{% include "admin/page/_form.html.twig" %}
{% endblock %}

{% block modal %}
	<h2>Are you sure?</h2>
	<p>You can't undo deleting this page</p>

	<form method="post" action="{{ path('admin_page_delete', {'id': page.id}) }}">
		<input type="hidden" name="id" value="{{ page.id }}">
		<button type="submit" class="confirm-button">Confirm</button>
	</form>
	<a data-fancybox-close class="cancel-button">Cancel</a>
{% endblock %}